<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/athome_list_cell"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/athome_camera_list_listview_cell_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/videolist_cell_icon_view"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/athome_camera_list_cell_bg"
        android:gravity="center"
        android:padding="3dp">

        <ImageView
            android:id="@+id/videolist_cell_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/athome_camera_list_cell_icon"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/videolist_cell_arrow"
        android:layout_toRightOf="@id/videolist_cell_icon_view"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/videolist_cell_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@drawable/text_black_white_selector"
            android:layout_marginBottom="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/videolist_cell_camera_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@drawable/text_black_grey_selector"
            android:textSize="12sp" />
    </LinearLayout>
	<ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_two"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>